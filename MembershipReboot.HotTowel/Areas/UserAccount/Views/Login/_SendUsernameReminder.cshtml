@model MembershipReboot.HotTowel.Areas.UserAccount.Models.SendUsernameReminderInputModel

@using (Html.BeginForm("JsonSendUsername", "Membership", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "sendUsernameReminderForm", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Send Username</legend>
        @Html.EditorForModel()
        <div class="control-group">
            <div class="controls">
                <input type="submit" value="Send Username" class="btn btn-primary" />
            </div>
        </div>
        <div class="alert alert-success" style="display:none">
            <strong>Success!</strong>&nbsp;<span></span>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        @Html.ValidationSummary()
    </fieldset>
}